function reverse(word){

	var reverseword="";

	for(var i=word.length-1;i>=0;i--){
		var letter=word[i];
		reverseword=reverseword+letter;;
	}

	return reverseword;
} 

function ispalindorme(input){
	var reverseword=reverse(input);
	if(input==reverseword){
		return true;
	}
	else{
		return false;
	}
 }
